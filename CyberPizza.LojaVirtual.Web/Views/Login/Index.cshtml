@using CyberPizzaMvc.Models
@model CyberPizzaMvc.Models.User.W01 
 
@using (Html.BeginForm("Index", "Login", FormMethod.Post))
{
    <div class="pager login-margin">
        <h2 class="page-header text-left">Entrar</h2>
        <form class="form-horizontal">
            <div class="form-group">
                <div class="input-group input-group-lg" id="divBtnEmail">
                    <span class="input-group-addon">@String.Format("@")</span>
                    @Html.TextBoxFor(w01 => w01.W01_002_C, new { @class = "form-control input-sm", PlaceHolder = "E-mail" })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group input-group-lg" id="divBtnPassword">
                    <span class="input-group-addon"><i class="glyphicon glyphicon-asterisk" aria-hidden="true"></i></span>
                    @Html.TextBoxFor(w01 => w01.W01_003_C, new { @class = "form-control input-sm", PlaceHolder = "Password", type="password" })
                </div>
            </div>
            <div class="form-group text-right">
                <div class="col-lg-10 col-lg-offset-2">
                    <button class="btn btn-default">Cancel</button>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </div>
        </form>
    </div>
}

